<% template=name=> { %>
    <%- include(`../templates/${name}`) %>
        <% } %>
            <!doctype html>
            <html class="h-full bg-gray-100">

            <head>
                <meta charset="UTF-8">
                <meta name="viewport" content="width=device-width, initial-scale=1.0">
                <script src="https://cdn.tailwindcss.com"></script>
            </head>

            <body class="h-full">
                <div class="min-h-full">
                    <% template('nav') %>

                        <header class="bg-white shadow">
                            <div class="flex mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
                                <h1 class="text-3xl font-bold tracking-tight text-gray-900">Matches</h1>
                                <a href="/match"
                                    class="ml-auto px-4 py-2 font-semibold text-sm bg-sky-500 text-white rounded-full shadow-sm">Create
                                    New</a>
                            </div>
                        </header>
                        <main class="bg-white mt-4 py-8 px-6">
                            <div
                                class="mx-auto grid max-w-2xl grid-cols-1 gap-x-4 gap-y-8 lg:mx-0 lg:max-w-none md:grid-cols-2 lg:grid-cols-3">

                                <% if (!matches || matches.length===0) { %>
                                    <p class="text-gray-600">No matches available at the moment.</p>
                                    <% } else { %>

                                        <% matches.forEach(function(match, index) { %>
                                            <article
                                                class="bg-sky-100 p-4 rounded-lg max-w-xl flex-col items-start justify-between">
                                                <div class="flex items-center gap-x-4 text-xs">
                                                    <time datetime="2020-03-16" class="text-gray-500">
                                                        <%= match.date.toLocaleDateString() %> | <%=
                                                                match.date.toLocaleTimeString('en-IN') %>
                                                    </time>
                                                    <a
                                                        class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">
                                                        <%= match.category %>
                                                    </a>
                                                </div>
                                                <div class="group relative">
                                                    <div
                                                        class="flex items-center mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
                                                        <a>
                                                            <span class="absolute inset-0"></span>
                                                            Contest #<%= index+1 %>
                                                        </a>

                                                    </div>
                                                </div>
                                                <div class="relative mt-4 flex items-center">
                                                    <a href="/match/<%= match._id %>"
                                                        class="px-6 py-2 font-semibold text-sm bg-sky-500 text-white rounded-full shadow-sm">Edit
                                                        Details</a>
                                                    <a href="/distribute/<%= match._id %>"
                                                        class="ml-4 px-6 py-2 font-semibold text-sm bg-green-500 text-white rounded-full shadow-sm">Distribute
                                                        Prize</a>
                                                    </div>
                                            </article>
                                            <% }); %>

                                                <% } %>

                                                    <!-- More posts... -->
                            </div>
                        </main>
                </div>
            </body>

            </html>